@using TaskMaster.Models;

@{
  Layout = "_Layout";
}
<div class="container">
    <h1>TaskMaster</h1>

    <h1>To Do List</h1>
    <ul>
      @if (Model.Count == 0)
      {
        <p>You have no items in your to do list!</p>
      }
      @if(Model.Count != 0)
      {
        @foreach (Item item in Model)
        {
          <li><a href='/items/@item.GetId()'>@item.GetDescription()</a></li>
        }
      }
    </ul>
    <a href="/items/new">Add a new item.</a>

    <form action="/items/delete" method="post">
      <button type="submit" name="button">Clear All Items</button>
    </form>
</div>
